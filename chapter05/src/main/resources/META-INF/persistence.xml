<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="chapter07PU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <mapping-file>META-INF/default_mapping.xml</mapping-file>
        <class>org.agoncal.book.javaee6.chapter05.ex00.Customer00</class>
        <class>org.agoncal.book.javaee6.chapter05.ex00.Person00</class>
        <class>org.agoncal.book.javaee6.chapter05.ex01.Customer01</class>
        <class>org.agoncal.book.javaee6.chapter05.ex02.Customer02</class>
        <class>org.agoncal.book.javaee6.chapter05.ex05.Person05</class>
        <class>org.agoncal.book.javaee6.chapter05.ex05.Customer05</class>
        <properties>
            <property name="eclipselink.target-database" value="DERBY"/>
            <!-- Embedded mode -->
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:chapter05DB;create=true"/>
            <!-- Client Server mode -->
            <!--<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>-->
            <!--<property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/chapter05DB;create=true"/>-->
            <property name="javax.persistence.jdbc.user" value="APP"/>
            <property name="javax.persistence.jdbc.password" value="APP"/>
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <property name="eclipselink.logging.level" value="INFO"/>
        </properties>
    </persistence-unit>
</persistence>        