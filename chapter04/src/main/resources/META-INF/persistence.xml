<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="chapter04PU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>org.agoncal.book.javaee6.chapter04.ex01.Book01</class>
        <class>org.agoncal.book.javaee6.chapter04.ex07.Address07</class>
        <class>org.agoncal.book.javaee6.chapter04.ex07.Customer07</class>
        <class>org.agoncal.book.javaee6.chapter04.ex22.Address22</class>
        <class>org.agoncal.book.javaee6.chapter04.ex22.Book22</class>
        <class>org.agoncal.book.javaee6.chapter04.ex22.Customer22</class>
        <class>org.agoncal.book.javaee6.chapter04.ex25.Address25</class>
        <class>org.agoncal.book.javaee6.chapter04.ex25.Book25</class>
        <class>org.agoncal.book.javaee6.chapter04.ex25.Customer25</class>
        <class>org.agoncal.book.javaee6.chapter04.ex30.Address30</class>
        <class>org.agoncal.book.javaee6.chapter04.ex30.Customer30</class>
        <class>org.agoncal.book.javaee6.chapter04.ex35.Book35</class>
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
        <properties>
            <property name="eclipselink.target-database" value="DERBY"/>
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <property name="eclipselink.logging.level" value="INFO"/>
            <!-- Embedded mode -->
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:chapter04DB;create=true"/>
            <!-- Client Server mode -->
            <!--<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>-->
            <!--<property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/chapter04DB;create=true"/>-->
            <property name="javax.persistence.jdbc.user" value="APP"/>
            <property name="javax.persistence.jdbc.password" value="APP"/>
        </properties>
    </persistence-unit>
</persistence>        